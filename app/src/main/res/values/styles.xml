<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonStyle">@style/monster_button</item>
    </style>

    <style name="monster_button" parent="android:Widget.Button">
        <item name="android:drawableStart">@drawable/monster_icon</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
